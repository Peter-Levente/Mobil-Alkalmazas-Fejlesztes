<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="117dp"
        android:layout_height="75dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/szam2" />

    <EditText
        android:id="@+id/szam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/szam1" />

    <EditText
        android:id="@+id/szam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plusz" />

    <Button
        android:id="@+id/plusz"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="195dp"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/minusz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/minusz"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="195dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/szorzas"
        app:layout_constraintStart_toEndOf="@+id/plusz"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/szorzas"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="195dp"
        android:text="*"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/osztas"
        app:layout_constraintStart_toEndOf="@+id/minusz"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/osztas"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="166dp"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/szorzas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="33dp"
        android:text="Result:"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/szam2" />
</androidx.constraintlayout.widget.ConstraintLayout>